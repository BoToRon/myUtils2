{
	"compilerOptions": {
		"lib": [
			"ES2022",
			"DOM"
		],
		//"declaration": true, does not seem to work unless explicitly specifiying --declaration in the command
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"strict": true,
		"target": "ESNext",
	},
}